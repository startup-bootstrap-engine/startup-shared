{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["./src/**/*"]
}
